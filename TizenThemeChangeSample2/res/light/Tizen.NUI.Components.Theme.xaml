    <TextLabelStyle x:Key="NotificationToast"
      BackgroundColor="#000209"
      TextColor="White" />

    <c:AlertDialogStyle x:Key="Tizen.NUI.Components.AlertDialog"
      BackgroundColor="#000209">
      <c:AlertDialogStyle.TitleTextLabel>
        <TextLabelStyle
          TextColor="White" />
      </c:AlertDialogStyle.TitleTextLabel>
      <c:AlertDialogStyle.MessageTextLabel>
        <TextLabelStyle
          TextColor="White"/>
      </c:AlertDialogStyle.MessageTextLabel>
    </c:AlertDialogStyle-->
</Theme>