<?xml version="1.0" encoding="UTF-8"?>
<Theme
  xmlns="http://tizen.org/Tizen.NUI/2018/XAML"
  xmlns:c="clr-namespace:Tizen.NUI.Components;assembly=Tizen.NUI.Components"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  Id="TestTheme" BasedOn="Tizen.NUI.Theme.Common">

  <!--CheckBox-->
  <c:ButtonStyle x:Key="CheckBox" Size="30, 30">
    <c:ButtonStyle.Icon>
      <ImageViewStyle Opacity="0.8"/>
    </c:ButtonStyle.Icon>
  </c:ButtonStyle>

  <!--Switch-->
  <c:SwitchStyle x:Key="Switch" Size="96, 60" SolidNull="true">
    <c:Switch.Track>
      <ImageViewStyle Size="96, 96"/>
    </c:Switch.Track>
  </c:SwitchStyle>
</Theme>