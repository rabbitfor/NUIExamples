<?xml version="1.0" encoding="UTF-8"?>
<Theme
  xmlns="http://tizen.org/Tizen.NUI/2018/XAML"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  Id="GreenTheme">

  <!--DefaultTextLabel-->
  <TextLabelStyle x:Key="Tizen.NUI.BaseComponents.TextLabel"
    TextColor="#22741C"
    PixelSize="20"/>

  <!--TextLabelTypeA-->
  <TextLabelStyle x:Key="TextLabelTypeA"
    TextColor="#2F9D27"
    PixelSize="30"/>

  <!--TextLabelTypeB-->
  <TextLabelStyle x:Key="TextLabelTypeB"
    TextColor="#BCE55C"
    PixelSize="40"/>

  <!--TextFieldTypeB-->
  <TextFieldStyle x:Key="TextFieldTypeA"
    Size="300, 50"
    TextColor="Black"
    PlaceholderText="Please type..."
    PlaceholderTextColor="1, 1, 1, 0.5"
    PixelSize="20"
    VerticalAlignment="Center"
    BackgroundColor="#BCE55C"
    CornerRadius="10"/>

</Theme>