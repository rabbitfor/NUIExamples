<?xml version="1.0" encoding="UTF-8"?>
<Theme
  xmlns="http://tizen.org/Tizen.NUI/2018/XAML"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  Id="BlackTheme">

  <!--DefaultTextLabel-->
  <TextLabelStyle x:Key="Tizen.NUI.BaseComponents.TextLabel"
    TextColor="Black"
    PixelSize="20"/>

  <!--TextLabelTypeA-->
  <TextLabelStyle x:Key="TextLabelTypeA"
    TextColor="#555555"
    PixelSize="30"/>

  <!--TextLabelTypeB-->
  <TextLabelStyle x:Key="TextLabelTypeB"
    TextColor="#BBBBBB"
    PixelSize="40"/>

  <!--TextFieldTypeB-->
  <TextFieldStyle x:Key="TextFieldTypeA"
    Size="300, 50"
    TextColor="Black"
    PlaceholderText="Please type..."
    PlaceholderTextColor="1, 1, 1, 0.5"
    PixelSize="20"
    VerticalAlignment="Center"
    BackgroundColor="#AAAAAA"
    CornerRadius="0"/>

</Theme>